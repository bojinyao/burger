<div class="container">

    <img src="/assets/img/burger.jpg" class="img-fluid" alt="Responsive image">

    <div class="row justify-content-center">
        <div class="un-devoured-burgers col-4">

            <ul>
                {{#each burgers}} 
                    {{#unless devoured}} 
                        <li>
	                        {{burger_name}}
	                        <button class="change-devour btn btn-primary" data-id="{{id}}" data-isDevoured="{{devoured}}">
                                DEVOUR!
                            </button>
                        </li>
                    {{/unless}} 
                {{/each}}
            </ul>

        </div>
        <div class="devoured-burgers col-4">

            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            {{burger_name}}     
                        </li>
                     {{/if}}
                {{/each}}
            </ul>

        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-8">
            <form class="create-form">
                <div class="form-group">
                    <label for="burg">New Burger:</label>
                    <input id="burg" type="text" name="burger_name">
                </div>

                <button type="submit" class="btn btn-primary">Add Burger</button>
            </form>
        </div>
    </div>

</div>